{% extends '@Contao/block_searchable' %}

{% block content %}

    <div class="card">
        <div class="image-zoom-in">
            {% if figure %}
                {{ figure|raw }}
            {% endif %}
        </div>

        <div class="card-body">
            <a href="{{ jumpTo }}" title="{{ 'SAC_CAB.readMore'|trans({}, 'contao_default') }}">
                <h6 class="card-title mt-0">{{ cabin.name }}</h6>
            </a>
            <p><small>{{ cabin.altitude }} {{ 'SAC_CAB.metersAtSeaLevelShortcut'|trans({}, 'contao_default') }}</small></p>
        </div>
    </div>

{% endblock %}
